# A verbose, human readable ls
alias ll="ls -lhA"

# New emacs with colors etc
alias coloremacs="source ~/edwards-stuff/spack/emacs-rtags.sh && TERM=xterm-24bits emacs"

# This ulimit command is annoying
alias coredumps="ulimit -S -c unlimited"

# From github.com/jez/dotfiles
# so much easier to type than `cd ..`
alias cdd="cd .."
alias cddd="cd ../.."
alias cdddd="cd ../../.."
alias cddddd="cd ../../../.."
alias cdddddd="cd ../../../../.."
alias cddddddd="cd ../../../../../.."
