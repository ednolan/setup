# f1 for prefix
unbind C-b
set -g prefix F1
bind-key F1 send-prefix

# Start windows and panes at 1, not 0
set -g base-index 1
setw -g pane-base-index 1

# Quieter bottom bar
set -g status-bg colour251

# Various fixes for editor
set-option -g xterm-keys on

set -g default-terminal "tmux-256color"
set-option -ga terminal-overrides "tmux-256color:Tc"


# make sure sessions are alphabetical
bind s choose-tree -s -O name

# Home/end key hack
bind -n End send-key C-e
bind -n Home send-key C-a

# increase scrollback buffer size
set -g history-limit 50000

# mouse mode
set -g mouse on

# pane movement
bind-key j command-prompt -p "join pane from:"  "join-pane -h -s '%%'"
bind-key b command-prompt -p "send pane to:"  "break-pane -t '%%'"

# fix default mouse drag
unbind -T copy-mode MouseDragEnd1Pane

set -g status-right-length 60
set -g status-right " \"#{=22:pane_title}\"  %a %b %e %l:%M %p"
